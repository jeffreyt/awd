{
  "description": "TinyMonitor monitors prices from Amazon Warehouse Deals.",
  "manifest_version": 2,
  "name": "TinyMonitor",
  "permissions": [ "tabs",
                    "http://www.amazon.com/",
                    "https://www.amazon.com/",
                    "chrome://favicon/",
                    "storage",
                    "unlimitedStorage",
                    "notifications",
                    "alarms" ],
  "version": "1.1",
  "browser_action":{
	   "default_icon":"imgs/icon.png",
     "default_title":"TinyMonitor",
     "default_popup":"popup.htm"
  },

  "icons": {
    "16":"imgs/icon16.png",
    "48":"imgs/icon48.png",
    "128":"imgs/icon128.png"
  },

  "background": {
    "page": "background.htm",
	  "persistent": true
  },
  "options_page":"options.htm"
}
